<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_client_workers_table" author="Belousova Daria">
        <createTable tableName="client_workers">
            <column name="client_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="worker_id" type="bigint">
                <constraints nullable="false"/>
            </column>
<!--            <constraints primaryKey="true" primaryKeyName="pk_client_workers">-->
<!--                <uniqueConstraint columnNames="client_id, worker_id"/>-->
<!--            </constraints>-->
        </createTable>

        <addForeignKeyConstraint baseTableName="client_workers"
                                 baseColumnNames="client_id"
                                 referencedTableName="client"
                                 referencedColumnNames="id"
                                 constraintName="fk_client_worker_client"/>

        <addForeignKeyConstraint baseTableName="client_workers"
                                 baseColumnNames="worker_id"
                                 referencedTableName="workers"
                                 referencedColumnNames="id"
                                 constraintName="fk_client_worker_worker"/>
    </changeSet>

</databaseChangeLog>